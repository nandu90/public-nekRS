void UDF_Setup(nrs_t *nrs)
{
  tavg::setup(nrs);
}

void UDF_ExecuteStep(nrs_t *nrs, dfloat time, int tstep)
{
  tavg::run(time);

  if (nrs->isOutputStep) {
    nek::ocopyToNek(time, tstep);
    nek::userchk(); //compute lambda2
    nek::ocopyFromNek(time);

    tavg::outfld();
  }
}
